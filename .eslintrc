{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "backtick"
    ],
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "dotenv",
          "dotenv-expand"
        ]
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}